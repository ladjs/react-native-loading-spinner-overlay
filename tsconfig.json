{
  "include": ["src"],
  "exclude": ["node_modules", "config.js"],
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "types": ["react", "jest"],
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "outDir": "./lib",
    "declaration": true
  }
}
